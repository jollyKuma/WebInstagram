@model WebInstagram.User

@{
    ViewBag.Title = "_MainNav";
}
<nav class="navbar navbar-default navbar-fixed-top" style="background-color:#0EBB9F;">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#" style="color: #fff; margin-left:50px;">My Blog</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <form action="" method="POST" class="navbar-form navbar-left" role="search">
                <div class="form-group">
                    <input type="text" class=" inputMaterial" name="search" id="search" placeholder="Search" style="width:300px">
                    <span class="highlight" style="width:300px"></span>
                    <span class="bar" style="width:300px"></span>
                </div>
                <button type="submit" class="btn btn-primary"><i class="fa fa-search " style="color:#FFFCE6"></i></button>
            </form>


            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="#" style="color:#FFFCE6"> <i class="fa fa-user"></i>@Session["LogedUserFullname"].ToString()</a>
                </li>
                <li>
                    <a href="@(Url.Action("Logout", "User"))" onclick="refresh()"><strong><i class="fa fa-sign-out " style="color:#FFFCE6;font-size: 14px;"></i></strong></a></li>
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</nav>
