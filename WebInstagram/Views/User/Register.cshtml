@model WebInstagram.User

@{
    ViewBag.Title = "Register";
}
<div class="box" style="height:">
    <div id="header">
        <div id="cont-lock"><i class="fa fa-edit lock"></i></div>
        <div id="bottom-head"><h1 id="logintoregister">Register</h1></div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            @Html.AntiForgeryToken()
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success">
                    @ViewBag.Message
                </div>
            }
            <div class="group" style="font-size:11px; padding:0px;margin-bottom: 17px;">
                <input class="inputMaterial" name="Fullname" type="text" required>
               <div style="color:red"> @Html.ValidationMessageFor(model => model.Fullname)</div>
                <span class="highlight"></span>
                <span class="bar"></span>
                <label>Fullname</label>
            </div>
            <div class="group" style="font-size:11px; padding:0px;margin-bottom: 17px;">
                <input class="inputMaterial" name="EmailID" type="text" required>
                <div style="color:red"> @Html.ValidationMessageFor(model => model.EmailID)</div>
                <span class="highlight"></span>
                <span class="bar"></span>
                <label>Email</label>
            </div>
            <div class="group" style="font-size:11px; padding:0px;margin-bottom: 17px;">
                <input class="inputMaterial" name="Username" type="text" required>
                <div style="color:red"> @Html.ValidationMessageFor(model => model.Username)</div>
                <span class="highlight"></span>
                <span class="bar"></span>
                <label>Username</label>
            </div>
            <div class="group" style="font-size:11px; padding:0px;margin-bottom: 17px;">
                <input class="inputMaterial" name="Password" type="password" required>
                <div style="color:red"> @Html.ValidationMessageFor(model => model.Password)</div>
                <span class="highlight"></span>
                <span class="bar"></span>
                <label>Password</label>
            </div>
            <div class="group" style="font-size:11px; padding:0px;margin-bottom: 0px;">
                <input class="inputMaterial" name="ConfirmPassword" type="password" required>
                <div style="color:red"> @Html.ValidationMessageFor(model => model.ConfirmPassword)</div>
                <span class="highlight"></span>
                <span class="bar"></span>
                <label>Confirm Password</label>
            </div>
                <p>
                    <input type="submit" name="submit" value=" Register" class="btns" />
                </p>
</fieldset>
    }
    <div id="footer-box" style="height:30px"><p class="footer-text">Already have an account?<a href="@(Url.Action("Login", "User"))"><span class="sign-up"> Sign in</span></a></p></div>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
